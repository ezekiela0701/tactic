 <!-- ======= Hero Section ======= -->
  <section id="hero">
    <div id="heroCarousel" class="carousel slide carousel-fade" data-ride="carousel">

      <ol class="carousel-indicators" id="hero-carousel-indicators"></ol>
      {% if listCarousels is not empty %}
      
        <div class="carousel-inner" role="listbox">
          <div class="carousel-item active" style="background-image: url({{asset('images/uploads/carousel/'~ listCarousels[0].image)}})">
            <div class="carousel-container">
              <div class="container">
                <h2 class="animate__animated animate__fadeInDown">{{listCarousels[0].title}} </h2>
                <p class="animate__animated animate__fadeInUp">
              {{listCarousels[0].description}}</p>
              </div>
            </div>
          </div>
        {% endif %}
        {% for listCarousel in listCarousels %}
          {% if listCarousel.title == listCarousels[0].title %}
          {% else %}
            <!-- Slide 1 -->
          <div class="carousel-item" style="background-image: url({{asset('images/uploads/carousel/'~ listCarousel.image)}})">
            <div class="carousel-container">
              <div class="container">
                <h2 class="animate__animated animate__fadeInDown"> {{listCarousel.title}} </h2>
                  <p class="animate__animated animate__fadeInUp">
                      {{listCarousel.description}}
                  </p>
                {# <a href="#about" class="btn-get-started animate__animated animate__fadeInUp scrollto">Read More</a> #}
              </div>
            </div>
          </div>
          {% endif %}
        {% endfor %}

      </div>

      <a class="carousel-control-prev" href="#heroCarousel" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon icofont-simple-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>

      <a class="carousel-control-next" href="#heroCarousel" role="button" data-slide="next">
        <span class="carousel-control-next-icon icofont-simple-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>

    </div>
  </section><!-- End Hero -->