{% extends 'fo/base.html.twig' %}

{% block title %}Lesson controller
{% endblock %}

{% block body %}
	<br><br><br><br>
	<!-- =======  Exam Section ======= -->
	<div id="services" class="services-area area-padding">
		<div class="container">
			<div class="row">
				<div class="col-md-12 col-sm-12 col-xs-12">
					<div class="section-headline services-head text-center">
						<h2>Vos sujet d'examen par mati√®re</h2>
					</div>
				</div>
			</div>
			<div class="row text-center">
				<!-- Start Left services -->
				{# {% for listSubject in listSubjects %} #}
					{% if listSubjects is empty %}<h1>Aucune information pour le moment
					</h1>
				{% else %}
					{% for exam in exams %}
						<div class="col-md-6 col-sm-6 col-xs-12">
							<div class="about-move">
								<div class="services-details">
									<div class="single-services">

										{% for filedoc in exam.documentExams %}
										<h1>{{exam.subject.name}}</h1>
											<div class="row">
												<div class="col-lg-6 col-md-6">
													<i class="far fa-calendar"></i>
													{{ include('fo/blocks/fileCardExam.html.twig', { 'file_name': filedoc.file, 'examslug': exam.slug }) }}
												</div>
											</div>
										{% endfor %}


									</div>
								</div>
								<!-- end about-details -->
							</div>
						</div>
					{% endfor %}

				{% endif %}
				{# {% endfor %} #}


			</div>
		</div>
	</div>


{% endblock %}
