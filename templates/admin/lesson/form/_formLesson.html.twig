{{ form_start(form_lesson) }}
    <div class="form-group mt-4">
        {# {{ form_row(form_lesson.classschool ) }} #}
        <label>Classe de </label>
         <select class="form-control" id="classschool" name="class" required>
                <option  value="" disabled selected>Classe</option>
            {% for classSchoolList in classSchoolLists %}
                <option value="{{classSchoolList.id}}" >{{classSchoolList.name}}</option>
            {% endfor %}
        </select>
    </div>
    <div class="form-group mt-4">
        <label>Matiere</label>
        <select class="form-control" id="subjects" name="subject" required>
            <option value="" disabled selected>Matiere</option>
        </select>
    </div>
    <div class="form-group mt-4">
        {{ form_row(form_lesson.trimester) }}
    </div>
    <div class="form-group mt-4">
        {{ form_row(form_lesson.chapter) }}
    </div>
    <div class="form-group mt-4">
        {{ form_row(form_lesson.title) }}
    </div> 
    <div class="form-group mt-4">
        {{ form_row(form_lesson.document) }}
    </div>
    <div class="form-group mt-4">
        {{ form_row(form_lesson.videos) }}
    </div>
    <div class="form-group mt-4">
        {{ form_row(form_lesson.status) }}
    </div>
    <div class="form-group mt-4">
		<button type="submit" class="btn btn-primary btn-block">Ajouter dans la liste</button>
	</div>
	{{ form_end(form_lesson) }}
