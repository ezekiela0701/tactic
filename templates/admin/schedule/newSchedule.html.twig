{% extends 'admin/base.html.twig' %}

{% block title %}Hello Controller!{% endblock %}
{% block stylesheets %}
  <!-- ckeditor -->
  <link href="{{ asset('boAsset/ckeditor/theme/css/fonts.css') }}" rel="stylesheet">
  <link href="{{ asset('boAsset/ckeditor/theme/css/sdk.css') }}" rel="stylesheet">
{% endblock %}

{% block body %}
	<section class="content-header">
		<div class="container-fluid">
			<div class="row mb-2">
				<div class="col-sm-6">
					<ol class="breadcrumb">
						<li class="breadcrumb-item">
							<a href="{{path('dashboard')}}">Dashboard</a>
						</li>
                        <li class="breadcrumb-item">
							<a href="{{path('bo_student_schedule')}}">Schedule</a>
						</li>
						{% if editMode %}	
							<li class="breadcrumb-item active">Edit</li>	
						{% else %}					
							<li class="breadcrumb-item active">New</li>
						{% endif %}
					</ol>
				</div>
				<div class="col-sm-6">
					<a class="btn btn-success float-sm-right" href="{{path('bo_student_schedule')}}">Retour</a>
				</div>
			</div>
		</div>
		<!-- /.container-fluid -->
	</section>
	<div class="col-12">
		<div class="card card-success">
			<div class="card-header">
				{% if editMode %}
				<h3 class="card-title">Modifier une emploie du temps</h3>        
				{% else %}
					<h3 class="card-title">Ajouter une nouvelle emploie du temps</h3>        							
				{% endif %}
			</div>
			<div class="card-body">
				{% include ("admin/schedule/form/_formSchedule.html.twig") %} 
			</div>
		</div>
	</div>
{% endblock %}

{% block javascripts %}
{{ include('admin/block/blockjs.ckeditor.html.twig', {'textarea_id': 'schedule_programm' }) }}
{% endblock %}