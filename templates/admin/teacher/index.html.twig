{% extends 'admin/base.html.twig' %}

{% block title %}Hello TeacherController!
{% endblock %}

{% block body %}
	<section class="content-header">
		<div class="container-fluid">
			<div class="row mb-2">
				<div class="col-sm-6">
					<ol class="breadcrumb">
						<li class="breadcrumb-item">
							<a href="{{path('dashboard')}}">Dashboard</a>
						</li>
						<li class="breadcrumb-item active">Teacher</li>
					</ol>
				</div>
				<div class="col-sm-6">
					<a class="btn btn-success float-sm-right" href="{{path('bo_teacher_add')}}">Ajouter nouveau professeur</a>
				</div>
			</div>
		</div>
		<!-- /.container-fluid -->
	</section>
	<div class="col-12">
		<div class="card card-success">
			<div class="card-header">
				<h3 class="card-title">Listes des professeurs enregistrer</h3>
			</div>
			<div class="card-body">
				<table id="teacherlist" class="table table-bordered table-striped">
					<thead>
						<tr>
							<th>Nom et prenom</th>
							<th>Photos</th>
							<th>Matiere a apprendre</th>
							<th>Action</th>
						</tr>
					</thead>
					<tbody>
						{% for listTeacher in listTeachers %}
							<tr>
								<td>{{listTeacher.name}}</td>
								<td><img src="{{asset('images/uploads/imgteacher/' ~ listTeacher.photos)}}" width="100px"></td>
								<td>{{listTeacher.subject}}</td>
								<td>
									<a href="{{ path('bo_teacher_edit', {'id': listTeacher.id}) }}" class="btn btn-rounded btn-success" data-toggle="tooltip" data-placement="bottom">
										<i class="m-r-10 fas fa-edit"></i>
									</a> &nbsp;&nbsp;&nbsp;
									<a href="{{ path('bo_teacher_delete', {'id': listTeacher.id}) }}" class="btn btn-rounded btn-danger" data-toggle="tooltip" data-placement="bottom">
										<i class="m-r-10 mdi fas fa-trash"></i>
									</a>
								</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
				{# {% include ("admin/contact/form/_formTeacher.html.twig") %} #}
			</div>
		</div>
	</div>
{% endblock %}
{% block javascripts %}
	{{ include('admin/block/blockjs.datatable.html.twig', { 'table_id': 'teacherlist', 'targets': 3 }) }}
{% endblock %}
