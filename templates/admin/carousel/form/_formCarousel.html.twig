{% if editMode %}
    {# <pre>
        {{ dump(carousel) }}
    </pre> #}
    <h3>Images correspondant</h3>
    <img src="{{asset('images/uploads/carousel/' ~ carousel.image)}}" class="img-thumbnail col-lg-4 col-md-6" >
{% endif %}

{{ form_start(formCarousel) }}
    <div class="form-group mt-4">
        {{ form_row(formCarousel.image) }}
    </div>
    <div class="form-group mt-4">
        {{ form_row(formCarousel.title) }}
    </div>
    <div class="form-group mt-4">
        {{ form_row(formCarousel.description) }}
    </div>
    <div class="form-group mt-4">
        {{ form_row(formCarousel.status) }}
    </div>
    {% if editMode %}
        <div class="form-group mt-4">
            <button type="submit" class="btn btn-success btn-block">Modifier la liste</button>
        </div>
    {% else %}
        <div class="form-group mt-4">
            <button type="submit" class="btn btn-primary btn-block">Ajouter dans la liste</button>
        </div>
    {% endif %}
{{ form_end(formCarousel) }}