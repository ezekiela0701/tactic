{% extends 'admin/base.html.twig' %}

{% block title %}gallery Image Accueil
{% endblock %}

{% block body %}
	<section class="content-header">
		<div class="container-fluid">
			<div class="row mb-2">
				<div class="col-sm-6">
					<ol class="breadcrumb">
						<li class="breadcrumb-item">
							<a href="{{path('dashboard')}}">Dashboard</a>
						</li>
						<li class="breadcrumb-item active">Gallery</li>
					</ol>
				</div>
				<div class="col-sm-6">
					<a class="btn btn-success float-sm-right" href="{{path('bo_galery_add')}}">Ajouter une nouvelle image</a>
				</div>
			</div>
		</div>
		<!-- /.container-fluid -->
	</section>
	<div class="col-12">
		<div class="card card-success">
			<div class="card-header">
				<h3 class="card-title">Listes des images galleries enregistrer</h3>
			</div>
			<div class="card-body">
				<table id="teacherlist" class="table table-bordered table-striped">
					<thead>
						<tr>
							<th>creer le</th>
							<th>Image</th>
							<th>Action</th>
						</tr>
					</thead>
					<tbody>
						{% for hommeGalleryList in hommeGalleryLists %}
							<tr>
								<td>{{hommeGalleryList.created | date('d-F-Y')}}</td>
								<td><img src ="{{asset('images/uploads/imggalleryaccueil/'~ hommeGalleryList.file)}}" width="100px" ></td>
								<td>
									<a href="{{ path('bo_galery_edit', {'id': hommeGalleryList.id}) }}" class="btn btn-rounded btn-success" data-toggle="tooltip" data-placement="bottom">
										<i class="m-r-10 fas fa-edit"></i>
									</a> &nbsp;&nbsp;&nbsp;
								
								</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
				{# {% include ("admin/contact/form/_formTeacher.html.twig") %} #}
			</div>
		</div>
	</div>
{% endblock %}
{% block javascripts %}
	{{ include('admin/block/blockjs.datatable.html.twig', { 'table_id': 'teacherlist', 'targets': 2 }) }}
{% endblock %}