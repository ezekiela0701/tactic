{{ form_start(formPresentation) }}

<div class="form-group mt-4">
	{{ form_row(formPresentation.content) }}
</div>

<div class="form-group mt-4">
	{{ form_row(formPresentation.status) }}
</div>

{% if editMode %}
	<div class="form-group mt-4">
		<button type="submit" class="btn btn-success btn-block">Modifier dans la liste</button>
	</div>
{% else %}
	<div class="form-group mt-4">
		<button type="submit" class="btn btn-primary btn-block">Ajouter dans la liste</button>
	</div>
{% endif %}


{{ form_end(formPresentation) }}
